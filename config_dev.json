{
  "_comment": "개발/테스트 환경 설정",
  "environment": "development",
  
  "performance": {
    "max_workers": 2,
    "batch_size": 5,
    "cve_fetch_hours": 1,
    "rule_check_interval_days": 1
  },
  
  "rate_limits": {
    "github_api": {
      "calls_per_hour": 5000,
      "delay_between_calls": 0.5
    },
    "groq_api": {
      "calls_per_minute": 30,
      "delay_between_calls": 1
    },
    "epss_api": {
      "calls_per_minute": 60,
      "delay_between_calls": 0.5
    }
  },
  
  "ai_models": {
    "translation": "gemma-3-27b-it",
    "analysis": "openai/gpt-oss-120b"
  },
  
  "groq_params": {
    "analysis": {
      "temperature": 0.3,
      "top_p": 0.9,
      "max_completion_tokens": 4096,
      "reasoning_effort": "medium"
    },
    "rule_generation": {
      "temperature": 0.2,
      "top_p": 0.85,
      "max_completion_tokens": 1024,
      "reasoning_effort": "medium"
    }
  },
  
  "features": {
    "enable_official_rule_check": true,
    "enable_github_issues": true,
    "enable_performance_monitoring": true,
    "enable_rate_limiting": true
  },
  
  "logging": {
    "level": "DEBUG",
    "console_output": true
  }
}