{
  "_comment": "프로덕션(운영) 환경 설정",
  "environment": "production",
  
  "performance": {
    "max_workers": 3,
    "batch_size": 10,
    "cve_fetch_hours": 2,
    "rule_check_interval_days": 7
  },
  
  "rate_limits": {
    "github_api": {
      "calls_per_hour": 5000,
      "delay_between_calls": 1
    },
    "groq_api": {
      "calls_per_minute": 30,
      "delay_between_calls": 2
    },
    "epss_api": {
      "calls_per_minute": 60,
      "delay_between_calls": 1
    }
  },
  
  "ai_models": {
    "translation": "gemma-3-27b-it",
    "analysis": "openai/gpt-oss-120b"
  },
  
  "groq_params": {
    "analysis": {
      "temperature": 0.3,
      "top_p": 0.9,
      "max_completion_tokens": 8192,
      "reasoning_effort": "high"
    },
    "rule_generation": {
      "temperature": 0.2,
      "top_p": 0.85,
      "max_completion_tokens": 2048,
      "reasoning_effort": "high"
    }
  },
  
  "features": {
    "enable_official_rule_check": true,
    "enable_github_issues": true,
    "enable_performance_monitoring": true,
    "enable_rate_limiting": true
  },
  
  "logging": {
    "level": "INFO",
    "console_output": true
  }
}
